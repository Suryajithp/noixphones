<section>
    <div class="condainer mt-4">
        <div class="row mt-5">
            <div class="col-md-4 mx-auto ">
                <h2 class="text-center">Add new Category</h2>
                <form action="/admin/add-category" method="post">
                    <div class="form-group">
                        <label>Category Name</label>
                        <input type="text" class="form-control" name="catname" id="contact-name"
                        onkeyup="validateCatName()">
                    <span id="name-error"></span>
                        <div class="mx-auto mt-3" style=" width: fit-content;">
                            <button type="submit" class="btn btn-warning" onclick="return validateCatForm()">Submit</button>
                        <span id="submit-err"></span>
                        </div>
                    
                </form>
            </div>
        </div>
        <div class="col-md-4 mx-auto">
            <h2 class="text-center">Category List</h2>
            <div class="card">
                <div class="table-responsive">
                    <table class="table mb-0 table-centered">
                        <thead>
                            <tr>
                                <th>Category</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                                {{#each category}}
                            <tr>
                                <td>
                                    {{this.catname}}
                                </td>
                                <td>
                                    <a href="/admin/delete-category/{{this._id}}" class="btn btn-sm btn-danger" onclick="return confirm('Are you want to delete {{this.catname}} ?')">
                                    <i class="fas fa-trash-alt"></i>
                                </td>    
                            </tr>
                                {{/each}}
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</section>