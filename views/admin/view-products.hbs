<div class="row mt-5">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row mt-5 mb-3">
                    <a href="/admin/add-product" class="btn btn-primary ms-auto " style="width: fit-content;">Add
                        Product</a>
                </div>

                <h1 class="mt-0 mb-5 ml-5 header-title">Products</h1>
                {{!-- <p class="text-muted mb-4 font-13">The Buttons extension for DataTables
                    provides a common set of options, API methods and styling to display
                    buttons on a page that will interact with a DataTable. The core library
                    provides the based framework upon which plug-ins can built.
                </p> --}}

                <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap"
                    style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th scope="col">No</th>
                            <th scope="col">Product name</th>
                            <th scope="col">Price</th>
                            <th scope="col">Ram</th>
                            <th scope="col">Storage</th>
                            <th scope="col">Color</th>
                            <th scope="col">stock</th>
                            <th scope="col">Image</th>
                            <th scope="col">Category</th>
                            <th scope="col">Update</th>
                            <th scope="col">Delete</th>
                            <th scope="col">Discription</th>

                        </tr>
                    </thead>
                    <tbody>
                        {{#each products}}
                        <tr>
                            <th scope="row">{{@index}}</th>
                            <td>{{this.Proname}}</td>
                            <td>{{this.price}}</td>
                            <td>{{this.ram}}</td>
                            <td>{{this.storage}}</td>
                            <td>{{this.color}}</td>
                            <td>{{this.stock}}</td>

                            <td><img style="width: 50px;height: 50px;" src="/product-images/{{this.image.[0]}}" alt="">
                            </td>
                            <td>{{this.cat}}</td>

                            <td>
                                <a href="/admin/update-product/{{this._id}}" class="btn btn-warning">Update</a>
                                <br>
                                {{#if this.banner}}
                                <a href="/admin/add-banner/{{this._id}}" class="btn mt-3 btn-secondary"
                                    onclick="return confirm('Do you want to remove {{this.Proname}} from banner ?')">Remove banner</a>
                                {{else}}
                                <a href="/admin/add-banner/{{this._id}}" class="btn mt-3 btn-info"
                                    onclick="return confirm('Do you want to add {{this.Proname}} to the banner ?')">Add
                                    to banner</a>
                                {{/if}}
                            </td>
                            <td>
                                <a href="/admin/delete-product/{{this._id}}" class="btn btn-dark"
                                    onclick="return confirm('Are you want to delete {{this.Proname}} ?')">Delete</a>
                            </td>
                            <td>{{this.description}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>

            </div>



        </div>
    </div> <!-- end col -->


</div> <!-- end row -->