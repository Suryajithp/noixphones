<section>
    <div class="top">

    </div>
    <div class="condainer p-5">
        <div class="row m-0" style="margin-top: 150px;">
            <div class="col-md-6 m-auto">
                <div class="containor mt-5 pl-5">
                    <h2 class="text-center">Create Account</h2>
                    <form action="/signup" method="POST">
                        {{#if signerr}}
                        <p class="error text-center" style="color: red;">Email already taken</p>
                        {{/if}}
                        {{#if otpErr}}
                        <p class="error text-center" style="color: red;">Invalid Otp</p>
                        {{/if}}
                        <div class="form-group">
                            <label>Name</label>
                            <input type="text" class="form-control" name="Name" placeholder="Enter your name"
                                id="contact-name" onkeyup="validateName()">
                            <span id="name-error"></span>
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" class="form-control" name="Email" placeholder="Enter email"
                                id="contact-email" onkeyup="validateEmail()">
                            <span id="email-err"></span>
                        </div>
                        <div class="form-group">
                            <label>Mobile number</label>
                            <input type="text" class="form-control" name="Mobile" placeholder="mobile number"
                                id="contact-phone" onkeyup="validatePhone()">
                            <span id="phone-err"></span>
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control" name="Password" placeholder="Password"
                                id="contact-password" onkeyup="validatePassword()">
                            <span id="password-err"></span>
                        </div>
                        <a href="/login" class="sign sign-info mt-5 "
                            style="width: fit-content; text-decoration: none;">Already
                            have account ?</a>
                        <div class="mx-auto mt-3" style=" width: fit-content;">
                            <button type="submit" class="btn btn-dark" onclick="return validateForm()">Send otp</button>
                            <span id="submit-err"></span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>