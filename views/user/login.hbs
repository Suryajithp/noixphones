<section>
    <div class="top">

    </div>
    <div class="condainer p-5">
        <div class="row m-0" style="margin-top: 150px;">
            <div class="col-md-6 m-auto">
                <div class="containor mt-5 pl-5">
                    <h2 class="text-center">Login</h2>
                    <h4 class="text-center">Get access to unique advantages</h4>
                    <form action="/login" method="POST">
                        {{#if loginerr}}
                        <p class="error text-center" style="color: red;">Invalid username or password</p>
                        {{/if}}
                        {{#if loginerr2}}
                        <p class="error text-center" style="color: red;">Your account is blocked</p>
                        {{/if}}
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" class="form-control" name="Email" placeholder="Enter email">

                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control" name="Password" placeholder="Password">
                        </div>
                        <a href="/signup" class="sign sign-info mt-5 "
                            style="width: fit-content; text-decoration: none;">Create new account</a>
                        <div class="mx-auto mt-5" style=" width: fit-content;">

                            <button type="submit" class="btn btn-dark">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>