<section>
    <div class="top">

    </div>
    <div class="condainer p-5">
        <div class="row ">
            <div class="col-md-6 mx-auto">
                <div class="containor mt-5 pl-5">
                    <h2 class="text-center">Edit Details</h2>
                    {{#if editErr}}
                    <p class="error text-center" style="color: red;">Email alredy taken</p>
                    {{/if}}
                    <form action="/edit-user/{{user._id}}" method="POST">
                        <div class="form-group">
                            <label>Name</label>
                            <input type="text" class="form-control" name="Name" placeholder="{{user.Name}}"
                                value="{{user.Name}}" id="contact-name" onkeyup="validateName()">
                            <span id="name-error"></span>
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" class="form-control" name="Email" placeholder="{{user.Email}}"
                                value="{{user.Email}}" id="contact-email" onkeyup="validateEmail()">
                            <span id="email-err"></span>
                        </div>
                        <div class="form-group">
                            <label>Mobile number</label>
                            <input type="text" class="form-control" name="Mobile" placeholder="{{user.Mobile}}"
                                value="{{user.Mobile}}" id="contact-phone" onkeyup="validatePhone()">
                            <span id="phone-err"></span>
                        </div>
                        <div class="mx-auto mt-3" style=" width: fit-content;">
                            <button type="submit" class="btn btn-dark"
                                onclick="return editValidateForm()">Submit</button>
                            <span id="editsubmit-err"></span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>